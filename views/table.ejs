<div class="container-xl">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-8">
            <button
              type="button"
              class="btn btn-primary btn-sm"
              data-toggle="modal"
              data-target="#add-modal"
            >
              Add
            </button>
            <a href="/timnas/homepage" class="btn btn-primary btn-sm">Back</a>
          </div>
          <div class="col-sm-4 mb-2">
            <div class="search-box">
              <input
                type="text"
                class="form-control"
                placeholder="Search&hellip;"
              />
            </div>
          </div>
        </div>
      </div>
      <table
        class="table table-striped table-hover table-bordered"
        id="dataTable"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>No Punggung</th>
            <th>Posisi</th>
            <th>Foto</th>
            <th>Klub</th>
            <th>Tangga</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < timnas.length; i++){ %>
          <tr>
            <td><%= i +1 %></td>
            <td><%= timnas[i].nama %></td>
            <td><%= timnas[i].no %></td>
            <td><%= timnas[i].posisi %></td>
            <td><a href="<%= timnas[i].foto %>">"Lihat gambar...</a></td>
            <td><%= timnas[i].klub %></td>
            <td><%= timnas[i].tangga %></td>
            <td class="text-center">
              <form
                action="/timnas/<%= timnas[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  class="btn btn-warning btn-sm button-update"
                  data-id="<%= timnas[i].id %>"
                  data-nama="<%= timnas[i].nama %>"
                  data-no="<%= timnas[i].no %>"
                  data-posisi="<%= timnas[i].posisi %>"
                  data-foto="<%= timnas[i].foto %>"
                  data-klub="<%= timnas[i].klub %>"
                  data-tangga="<%= timnas[i].tangga %>"
                  >Edit</a
                >
                <button
                  type="submit"
                  class="btn btn-danger btn-sm"
                  onclick="return confirm('Apa kamu yakin ingin menghapus data?');"
                >
                  Delete
                </button>
                <a href="/timnas/homepage" class="btn btn-info btn-sm">View</a>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
